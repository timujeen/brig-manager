<%= form_for(@brigade) do |f| %>
  <% if @brigade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brigade.errors.count, "error") %> prohibited this brigade from being saved:</h2>

      <ul>
      <% @brigade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Название" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :count_of_workers, "Количество рабочих" %><br />
    <%= f.number_field :count_of_workers %>
  </div>
  <div class="field">
    <%= f.label :price, "Стоимость" %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :country_id, "Страна" %><br />
    <%= f.collection_select :country_id, Country.all, :id, :title, {prompt: 'Выберите страну'} %>
  </div>
  <div class="field">
    <%= f.label :job_tokens, "Виды работ" %><br />
    <%= f.text_field :job_tokens, data: {load: @brigade.jobs} %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
