<h1>Список работ</h1>
<table>
	<tr>
		<th>Название:</th>
		<th></th>
	</tr>
	<% @jobs.each do |job| %>
	<tr>
		<td><%= job.brigades.size %> x <%= link_to "#{job.name}", brigades_path(id_from_jobs: job.id) %></td>
		<td>
			<%= link_to "Удалить", job, method: :delete, data: { confirm: "Операция удалит бригады в которых эта работа единственная! Продолжить?" } %>
		</td>
	</tr>
	<% end %>
</table>
<br />
<%= link_to "Список бригад", brigades_path %>
